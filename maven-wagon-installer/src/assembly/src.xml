<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/${dependency.output.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>*.pom</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/${dependency.output.directory}/META-INF</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>HERE_NOTICE</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/bin</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>install.sh</include>
                <include>INSTALL.BAT</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/pom</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>pom-test.xml</include>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/docs</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
